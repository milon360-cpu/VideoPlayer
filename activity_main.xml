<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#18191A"
            android:orientation="vertical"
            >
            <!--  cover section started here -->
            <WebView
                android:layout_width="match_parent"
                android:layout_height="700px"
                android:src="@drawable/cover"
                android:scaleType="centerCrop"
                android:id="@+id/music"
                >
            </WebView>
            <!--  cover section end here -->
<!--            music section 1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="100px"
                android:background="#242522"
                android:id="@+id/music1"
                >

                <ImageView
                    android:layout_width="600px"
                    android:layout_height="300px"
                    android:layout_weight="1"
                    android:src="@drawable/music1"
                    android:scaleType="centerCrop"
                    >
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="20px"
                    android:textSize="50px"
                    android:textColor="#FFFFFF"
                    android:padding="40px"
                    android:text="কবিতা তুমি স্বপ্নচারিনী হয়ে | Kobita | James | Lyrics"
                    >
                </TextView>
            </LinearLayout>
            <!--            music section 2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="80px"
                android:background="#242522"
                android:id="@+id/music2"
                >
                <ImageView
                    android:layout_width="600px"
                    android:layout_height="300px"
                    android:layout_weight="1"
                    android:src="@drawable/music2"
                    android:scaleType="centerCrop"
                    >
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="20px"
                    android:textSize="50px"
                    android:textColor="#FFFFFF"
                    android:padding="40px"
                    android:text="এক নদী যমুনা | Ek Nodi Jamuna | James | Lyrics"
                    >
                </TextView>
            </LinearLayout>
            <!--            music section 3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="80px"
                android:id="@+id/music3"
                android:background="#242522"
                >
                <ImageView
                    android:layout_width="600px"
                    android:layout_height="300px"
                    android:layout_weight="1"
                    android:src="@drawable/music3"
                    android:scaleType="centerCrop"
                    >
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="20px"
                    android:textSize="50px"
                    android:textColor="#FFFFFF"
                    android:padding="40px"
                    android:text="Tor Premete Ondho Holam-Lyrics| Tor Premete Ondho Holam|"
                    >
                </TextView>
            </LinearLayout>
            <!--            music section 4-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="80px"
                android:background="#242522"
                android:id="@+id/music4"
                >
                <ImageView
                    android:layout_width="600px"
                    android:layout_height="300px"
                    android:layout_weight="1"
                    android:src="@drawable/music4"
                    android:scaleType="centerCrop"
                    >
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="20px"
                    android:textSize="50px"
                    android:textColor="#FFFFFF"
                    android:padding="40px"
                    android:text="বাবা কতদিন দেখিনা তোমায় | Baba Katodin Dekhina Tomay | James | Bangla Song"
                    >
                </TextView>
            </LinearLayout>
            <!--            music section 5-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="80px"
                android:background="#242522"
                android:id="@+id/music5"
                >
                <ImageView
                    android:layout_width="600px"
                    android:layout_height="300px"
                    android:layout_weight="1"
                    android:src="@drawable/music5"
                    android:scaleType="centerCrop"
                    >
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="20px"
                    android:textSize="50px"
                    android:textColor="#FFFFFF"
                    android:padding="40px"
                    android:text="Pagla Hawar tore | James | 31st night live concert from Coxs Bazar"
                    >
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>